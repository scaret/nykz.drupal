.alert .show {
position: relative;
top: -2px;
right: -19px;
line-height: 18px;
}
.simpleheader{
	height:35px;
}
.topic > *{
	margin:10px;
	display:none;
}
.topic .title{
	color:#337FD4;
	font-size:24px;
	line-height:30px;
}
.header > *{
	font-size:18px;
	line-height:20px;
	margin-top:5px;
	color:gray;
}
.content{
	margin-top:40px;
	margin-left:30px;
	font-size:13px;
}

.topic{
	width:300px;
	float:left;
}
.topic_active{
	width:620px!important;
	background:#EEE!important;
	border:1px solid #ACE4F8!important;
}
.topic_active>*{
	display:block;
}

.topic >.simpleheader{
	display:block;
}

.topic_active>.simpleheader{
	display:none;
}
.reply{
	border:1px solid white;
	background:#EEE;
	padding:20px;
}
.reply .author{
	color:green;
}
.reply.content{
	color:#333;
}
